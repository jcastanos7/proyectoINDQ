<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".vistas.Create_Events">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EVENTOS"
        android:textSize="30sp" />
    <EditText
        android:layout_width="213dp"
        android:layout_height="50dp"
        android:layout_marginTop="28dp"
        android:hint="Id"
        android:id="@+id/edt_idEvent"/>
    <EditText
        android:layout_width="213dp"
        android:layout_height="50dp"
        android:layout_marginTop="28dp"
        android:hint="Titulo"
        android:id="@+id/edt_tittleEvent"
        />
    <EditText
        android:layout_width="213dp"
        android:layout_height="100dp"
        android:layout_marginTop="28dp"
        android:id="@+id/edt_descriptionEvent"
        android:hint="Descripcion"
        />
    <EditText
        android:layout_width="213dp"
        android:layout_height="50dp"
        android:layout_marginTop="28dp"
        android:id="@+id/edt_dateEvent"
        android:inputType="date"
        android:hint="Fecha"
        />
    <EditText
        android:layout_width="213dp"
        android:layout_height="50dp"
        android:layout_marginTop="28dp"
        android:id="@+id/edt_imageEvent"
        android:hint="Imagen"
        />
    <EditText
        android:layout_width="213dp"
        android:layout_height="50dp"
        android:layout_marginTop="28dp"
        android:id="@+id/edt_attendancesEvent"
        android:hint="Asistentes"
        android:inputType="number"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crear"
        android:id="@+id/btn_CrearEventoCreate"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancelar"
        android:id="@+id/btn_CancelarCrearEvento"
        />
</LinearLayout>